<?xml version="1.0" encoding="UTF-8"?>  
<configuration status="WARN">  
    <appenders>  
        <Console name="Console" target="SYSTEM_OUT">  
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS}} %style{[%t]}{magenta} %style{%logger{1.1.1.*.*}}{cyan} %highlight{[%-5level]} - %msg%n"/>   
        </Console>  
    </appenders>  
    <loggers>  
        <root level="info">  
            <appender-ref ref="Console" />  
        </root>  
    </loggers>  
</configuration>  